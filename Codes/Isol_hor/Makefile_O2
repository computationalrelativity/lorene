SHELL=/bin/sh

include $(HOME_LORENE)/local_settings		  # defines which compiler,...

LIB = -L$(HOME_LORENE)/Lib -llorene -llorenef77 

.SUFFIXES : .o .C

SRC1 = isolhor.C
OBJ1 = $(SRC1:.C=.o)
EXE1 = $(SRC1:.C=)

$(EXE1): $(OBJ1)
	$(CXX) -o $@ $(CXXFLAGS) $(OBJ1) $(LIB) $(LIB_LAPACK) \
					$(LIB_GSL) $(LIB_PGPLOT) $(LIB_CXX) $(LIB_GSL)

.C.o:
	$(CXX)  -c $(CXXFLAGS) $(INC) $<

uninstall:
	rm -f $(OBJ1) 
	rm -f $(EXE1) 
